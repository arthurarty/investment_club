{
  "designSystem": {
    "name": "Financio Design System",
    "version": "1.0.0",
    "description": "A clean, modern design system for financial applications",
    
    "colors": {
      "primary": {
        "main": "#13ec5b",
        "hover": "#10d351",
        "description": "Bright green for primary actions"
      },
      "secondary": {
        "main": "#f0f4f2",
        "hover": "#e0e8e4",
        "description": "Light gray-green for secondary elements"
      },
      "text": {
        "primary": "#111813",
        "secondary": "#61896f",
        "description": "Dark gray for primary text, muted green for secondary text"
      },
      "background": {
        "main": "#ffffff",
        "description": "White background"
      },
      "border": {
        "main": "#f0f4f2",
        "description": "Light border color"
      }
    },
    
    "typography": {
      "fontFamily": {
        "primary": "'Manrope', 'Noto Sans', sans-serif",
        "fallback": "sans-serif"
      },
      "fontWeights": {
        "regular": 400,
        "medium": 500,
        "bold": 700,
        "extraBold": 800
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "2rem"
      },
      "lineHeights": {
        "tight": "1.25",
        "normal": "1.5",
        "relaxed": "1.75"
      },
      "textStyles": {
        "pageTitle": {
          "fontSize": "2rem",
          "fontWeight": 700,
          "color": "#111813",
          "lineHeight": "1.25"
        },
        "brandLogo": {
          "fontSize": "1.125rem",
          "fontWeight": 700,
          "color": "#111813"
        },
        "navLink": {
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "color": "#111813"
        },
        "cardTitle": {
          "fontSize": "1rem",
          "fontWeight": 500,
          "color": "#111813",
          "lineHeight": "1.5"
        },
        "cardSubtext": {
          "fontSize": "0.875rem",
          "fontWeight": 400,
          "color": "#61896f",
          "lineHeight": "1.5"
        },
        "buttonText": {
          "fontSize": "0.875rem",
          "fontWeight": 700,
          "color": "#111813"
        }
      }
    },
    
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "0.75rem",
      "lg": "1rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "2rem",
      "4xl": "2.5rem",
      "5xl": "3rem",
      "6xl": "4rem",
      "10xl": "10rem"
    },
    
    "borderRadius": {
      "none": "0",
      "sm": "0.25rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "full": "50%"
    },
    
    "components": {
      "navbar": {
        "height": "auto",
        "padding": {
          "vertical": "0.75rem",
          "horizontal": "2.5rem"
        },
        "borderBottom": "1px solid #f0f4f2",
        "backgroundColor": "#ffffff"
      },
      
      "button": {
        "primary": {
          "backgroundColor": "#13ec5b",
          "color": "#111813",
          "fontSize": "0.875rem",
          "fontWeight": 700,
          "padding": {
            "vertical": "0.5rem",
            "horizontal": "1rem"
          },
          "borderRadius": "0.5rem",
          "minWidth": "84px",
          "border": "none",
          "hover": {
            "backgroundColor": "#10d351"
          }
        },
        "secondary": {
          "backgroundColor": "#f0f4f2",
          "color": "#111813",
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "padding": {
            "vertical": "0.375rem",
            "horizontal": "1rem"
          },
          "borderRadius": "0.5rem",
          "border": "none",
          "hover": {
            "backgroundColor": "#e0e8e4"
          }
        }
      },
      
      "avatar": {
        "size": "40px",
        "borderRadius": "50%",
        "backgroundSize": "cover",
        "backgroundPosition": "center"
      },
      
      "icon": {
        "container": {
          "size": "48px",
          "backgroundColor": "#f0f4f2",
          "borderRadius": "0.5rem",
          "color": "#111813",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center"
        },
        "size": "24px"
      },
      
      "listItem": {
        "minHeight": "72px",
        "padding": {
          "vertical": "0.5rem",
          "horizontal": "1rem"
        },
        "backgroundColor": "#ffffff",
        "gap": "1rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between"
      },
      
      "card": {
        "title": {
          "fontSize": "1rem",
          "fontWeight": 500,
          "color": "#111813",
          "lineHeight": "1.5"
        },
        "subtitle": {
          "fontSize": "0.875rem",
          "fontWeight": 400,
          "color": "#61896f",
          "lineHeight": "1.5"
        },
        "amount": {
          "fontSize": "1rem",
          "fontWeight": 400,
          "color": "#111813"
        }
      }
    },
    
    "layout": {
      "maxContentWidth": "960px",
      "containerPadding": {
        "desktop": "10rem",
        "tablet": "2rem",
        "mobile": "1rem"
      },
      "sectionSpacing": "1.25rem"
    },
    
    "breakpoints": {
      "mobile": "576px",
      "tablet": "768px",
      "desktop": "992px",
      "wide": "1200px"
    },
    
    "shadows": {
      "none": "none",
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
    },
    
    "animations": {
      "duration": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms"
      },
      "easing": {
        "default": "ease-in-out",
        "in": "ease-in",
        "out": "ease-out"
      }
    },
    
    "designPrinciples": {
      "clarity": "Use clear typography hierarchy and adequate spacing",
      "consistency": "Maintain consistent spacing, colors, and component patterns",
      "minimalism": "Keep interfaces clean with purposeful use of color and decoration",
      "accessibility": "Ensure sufficient color contrast and readable font sizes",
      "focus": "Draw attention to primary actions with the bright green accent color"
    },
    
    "usage": {
      "colors": {
        "primary": "Use for primary CTAs, important actions, and key interactive elements",
        "secondary": "Use for backgrounds, cards, and secondary interactive elements",
        "text": {
          "primary": "Use for headings, body text, and primary content",
          "secondary": "Use for supporting text, metadata, and less prominent information"
        }
      },
      "typography": {
        "hierarchy": "Page titles (2rem bold) > Section headers (1.125rem bold) > Body text (1rem medium) > Supporting text (0.875rem regular)"
      },
      "spacing": {
        "components": "Use consistent gaps (1rem) between related elements",
        "sections": "Use larger spacing (2.5rem - 10rem) for page margins and major sections"
      }
    }
  }
}